{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build CM7",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/Makefile/CM7"
      },
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build CM4",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/Makefile/CM4"
      },
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build All",
      "dependsOn": ["Build CM7", "Build CM4"],
      "group": "build",
      "dependsOrder": "sequence"
    },
    {
      "label": "Flash All",
      "type": "shell",
      "command": "openocd",
      "args": [
        "-f",
        "board/st_nucleo_h745zi.cfg",
        "-c",
        "program Makefile/CM7/build/H755_DualCore_CM7.elf verify",
        "-c",
        "program Makefile/CM4/build/H755_DualCore_CM4.elf verify",
        "-c",
        "reset run",
        "-c",
        "shutdown"
      ],
      "group": "build"
    }
  ]
}
